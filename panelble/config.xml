<?xml version='1.0' encoding='utf-8'?>
<widget id="org.educabot" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Panel BLE</name>
    <description>
        Una app para controlar la genuino 101 con Bluetooth Low Energy.
    </description>
    <author email="andi_haller@hotmail.com" href="http://educabot.org/">
        Andreas Haller - Educabot
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<platform name="android">
        <icon src="res/mdpi.png" density="mdpi" />
        <icon src="res/hdpi.png" density="hdpi" />
        <icon src="res/xhdpi.png" density="xhdpi" />
        <icon src="res/xxhdpi.png" density="xxhdpi" />
        <icon src="res/xxxhdpi.png" density="xxxhdpi" />
		<allow-intent href="market:*" />
	</platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
